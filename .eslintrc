env:
    node: true

rules:
    indent: 2
    brace-style: 0
    camelcase: [2, { properties: "never" }]
    comma-style: [2, "last"]
    default-case: 2
    guard-for-in: 2
    no-floating-decimal: 2
    no-nested-ternary: 2
    no-undefined: 2
    quotes: [2, "single"]
    radix: 2
    space-after-function-name: [2, "never"]
    space-infix-ops: 0
    spaced-line-comment: [2, "always", { exceptions: ["-"]}]
    valid-jsdoc: [2, { prefer: { "return": "returns"}}]
